{
  "type": "object",
  "$id": "schema:auth:register",
  "additionalProperties": false,
  "required": ["name", "password", "email"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]{3,50}$",
      "maxLength": 50
    },
    "email": {
      "type": "string",
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "maxLength": 20
    }
  }
}
